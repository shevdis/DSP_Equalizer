<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.CheckBox?>
<AnchorPane id="AnchorPane" prefHeight="160" prefWidth="410" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.FXMLDocumentController">
    <children>

        <Label layoutX="130" layoutY="30" text="Панель управления" textFill="#fefefe" />
        <Button fx:id="button_select" layoutX="10" layoutY="60" onAction="#open" prefHeight="40.0" prefWidth="70.0" text="Open" />
        <Button fx:id="button_play" layoutX="90" layoutY="60" onAction="#play" prefHeight="40.0" prefWidth="70.0" text="Play" />
        <Button fx:id="button_pause" layoutX="170" layoutY="60" onAction="#pause" prefHeight="40.0" prefWidth="70.0" text="Pause" />
        <Button fx:id="button_stop" layoutX="250" layoutY="60" onAction="#stop" prefHeight="40.0" prefWidth="70.0" text="Reset" />
        <Button fx:id="buttonClose" layoutX="330" layoutY="60" maxWidth="110" onAction="#clickClose" prefHeight="40.0" prefWidth="70.0" text="Close" />

        <CheckBox layoutX="150" layoutY="120.0" onAction="#filterBox" text="ФНЧ КИХ" textFill="#fefefe" />
    </children>
</AnchorPane>
